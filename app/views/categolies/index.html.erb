<p id="notice"><%= notice %></p>

<h1>Categolies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categolies.each do |categoly| %>
      <tr>
        <td><%= categoly.name %></td>
        <td><%= categoly.description %></td>
        <td><%= link_to 'Show', categoly %></td>
        <td><%= link_to 'Edit', edit_categoly_path(categoly) %></td>
        <td><%= link_to 'Destroy', categoly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

